@using Laymaann.Entities.ViewModels.Props
@{
    HTMLProps props = new()
            {
                DataBsTheme = "",
                BodyClass = "bg-secondary"
            };

    MetaProps meta = new()
            {
                Title = "About",
                Description = "A dynamic webspace for blogs, gallery, apps, web resources and much more",
                Author = "Jasmeet Singh"
            };

    ViewData["HtmlProps"] = props;
    ViewData["MetaProps"] = meta;
}

@section JS{
    <script type="module" src="~/scripts/dedicated/admin/dashboard.js"></script>
}
@Html.AntiForgeryToken()
   <!-- Page container -->
      <div class="container py-5 mt-4 mt-lg-5 mb-lg-4 my-xl-5">
        <div class="row pt-sm-2 pt-lg-0">

          <!-- Sidebar (offcanvas on sreens < 992px) -->
          <aside class="col-lg-3 pe-lg-4 pe-xl-5 mt-n3">
            <div class="position-lg-sticky top-0">
              <div class="d-none d-lg-block" style="padding-top: 105px;"></div>
              <div class="offcanvas-lg offcanvas-start" id="sidebarAccount">
                <button class="btn-close position-absolute top-0 end-0 mt-3 me-3 d-lg-none" type="button" data-bs-dismiss="offcanvas" data-bs-target="#sidebarAccount" aria-label="Close"></button>
                <div class="offcanvas-body
                  <nav class="nav flex-column pb-2 pb-lg-4 mb-3">
                    <h4 class="fs-xs fw-medium text-body-secondary text-uppercase pb-1 mb-2">Account</h4>
                    <a class="nav-link fw-semibold py-2 px-0" href="/admin">
                      <i class="ai-user-check fs-5 opacity-60 me-2"></i>
                      Dashboard
                    </a>
                    <a class="nav-link fw-semibold py-2 px-0" href="account-settings.html">
                      <i class="ai-settings fs-5 opacity-60 me-2"></i>
                      Settings
                    </a>
                  </nav>
                  <nav class="nav flex-column pb-2 pb-lg-4 mb-1">
                    <h4 class="fs-xs fw-medium text-body-secondary text-uppercase pb-1 mb-2">Dashboard</h4>
                    <a class="nav-link fw-semibold py-2 px-0" href="/admin/messages">
                      <i class="ai-messages fs-5 opacity-60 me-2"></i>
                      Messages
                      <span class="badge bg-danger ms-auto">n</span>
                    </a>
                  </nav>
                  <nav class="nav flex-column">
                    <a class="nav-link fw-semibold py-2 px-0" href="/admin">
                      <i class="ai-logout fs-5 opacity-60 me-2"></i>
                      Sign out
                    </a>
                  </nav>
                </div>
              </div>
            </div>
          </aside>


          <!-- Page content -->
          <div class="col-lg-9 pt-4 pb-2 pb-sm-4">
            <div class="d-sm-flex align-items-center mb-4">
              <h1 class="h2 mb-4 mb-sm-0 me-4">Laymaann dashboard</h1>
              <div class="d-flex ms-auto">
               @*  <button class="btn btn-secondary me-3 me-sm-4" type="button">
                  <i class="ai-download me-2 ms-n1"></i>
                  Download
                </button> *@
                <select class="form-select">
                  <option value="Last week">Last week</option>
                  <option value="Last month">Last month</option>
                  <option value="Last 3 months">Last 3 months</option>
                  <option value="Last 6 months">Last 6 months</option>
                  <option value="Last year">Last year</option>
                </select>
              </div>
            </div>
            <div class="card border-0 py-1 p-md-2 p-xl-3 p-xxl-4">
              <div class="card-body">

                <!-- Stats -->
                <div class="row g-3 g-xl-4">
                  <div class="col-md-4 col-sm-6">
                    <div class="h-100 bg-secondary rounded-3 text-center p-4">
                      <h2 class="h6 pb-2 mb-1">Members</h2>
                      <div class="h2 text-primary mb-2"><span id="user_count"></span></div>
                      <p class="fs-sm text-body-secondary mb-0">Members signed up</p>
                    </div>
                  </div>
                  <div class="col-md-4 col-sm-6">
                    <div class="h-100 bg-secondary rounded-3 text-center p-4">
                      <h2 class="h6 pb-2 mb-1">Messages</h2>
                      <div class="h2 text-primary mb-2">n</div>
                      <p class="fs-sm text-body-secondary mb-0">messages received</p>
                    </div>
                  </div>
                  @* <div class="col-md-4 col-sm-12">
                    <div class="h-100 bg-secondary rounded-3 text-center p-4">
                      <h2 class="h6 pb-2 mb-1">Lifetime earnings</h2>
                      <div class="h2 text-primary mb-2">$9,156.74</div>
                      <p class="fs-sm text-body-secondary mb-0">Based on list price</p>
                    </div>
                  </div> *@
                </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Divider for dark mode only -->
      <hr class="d-none d-dark-mode-block">

      <!-- Sidebar toggle button -->
      <button class="d-lg-none btn btn-sm fs-sm btn-primary w-100 rounded-0 fixed-bottom" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarAccount">
        <i class="ai-menu me-2"></i>
        Account menu
      </button>